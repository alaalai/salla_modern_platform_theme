{# Footer Component - مكون التذييل #}
<footer class="site-footer" role="contentinfo">
    <div class="footer-content">
        <div class="container">
            <div class="footer-grid">
                {# About Section #}
                <div class="footer-column">
                    <h3 class="footer-title">{{ store.name }}</h3>
                    <p class="footer-desc">{{ store.description }}</p>
                    
                    {# Social Links #}
                    {% if store.social_links %}
                    <div class="social-links">
                        <h4 class="footer-subtitle">{{ 'footer.social_media' | t }}</h4>
                        <ul class="social-list">
                            {% for platform, url in store.social_links %}
                            <li>
                                <a href="{{ url }}" title="{{ platform }}" target="_blank" rel="noopener noreferrer" aria-label="{{ platform }}">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                        {# Social Icon SVG #}
                                    </svg>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                </div>
                
                {# Quick Links #}
                <div class="footer-column">
                    <h3 class="footer-title">{{ 'footer.about' | t }}</h3>
                    <ul class="footer-menu">
                        <li><a href="/about">{{ 'footer.about' | t }}</a></li>
                        <li><a href="/contact">{{ 'footer.contact' | t }}</a></li>
                        <li><a href="/blog">المدونة</a></li>
                        <li><a href="/faq">الأسئلة الشائعة</a></li>
                    </ul>
                </div>
                
                {# Policies #}
                <div class="footer-column">
                    <h3 class="footer-title">السياسات</h3>
                    <ul class="footer-menu">
                        <li><a href="/privacy-policy">{{ 'footer.privacy' | t }}</a></li>
                        <li><a href="/terms">{{ 'footer.terms' | t }}</a></li>
                        <li><a href="/return-policy">{{ 'footer.returns' | t }}</a></li>
                        <li><a href="/shipping">سياسة الشحن</a></li>
                    </ul>
                </div>
                
                {# Newsletter #}
                <div class="footer-column">
                    <h3 class="footer-title">{{ 'footer.newsletter' | t }}</h3>
                    <p class="footer-desc">{{ 'footer.newsletter' | t }}</p>
                    <form class="newsletter-form" method="post" action="/subscribe">
                        <label for="newsletter-email" class="sr-only">{{ 'footer.email' | t }}</label>
                        <div class="form-group">
                            <input 
                                type="email" 
                                id="newsletter-email" 
                                name="email" 
                                class="form-input" 
                                placeholder="{{ 'footer.email' | t }}" 
                                required
                                aria-label="{{ 'footer.email' | t }}"
                            >
                            <button type="submit" class="form-btn">{{ 'footer.subscribe' | t }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    {# Copyright Bar #}
    <div class="footer-copyright">
        <div class="container">
            <p>&copy; {{ "now" | date("Y") }} {{ store.name }}. {{ 'footer.copyright' | t }}</p>
            <div class="payment-methods">
                {# Display accepted payment methods #}
                {% if store.payment_methods %}
                    <span>طرق الدفع المقبولة:</span>
                    {% for method in store.payment_methods %}
                        <span class="payment-badge">{{ method.name }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1F2937 100%);
        color: white;
        margin-top: 64px;
    }
    
    .footer-content {
        padding: 48px 0 0 0;
    }
    
    .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 32px;
        padding-bottom: 32px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .footer-column {
        display: flex;
        flex-direction: column;
    }
    
    .footer-title {
        font-size: 18px;
        font-weight: 600;
        margin: 0 0 16px 0;
        color: white;
    }
    
    .footer-subtitle {
        font-size: 14px;
        font-weight: 600;
        margin: 16px 0 12px 0;
        color: rgba(255, 255, 255, 0.9);
    }
    
    .footer-desc {
        font-size: 14px;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
    }
    
    .footer-menu {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    
    .footer-menu a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 14px;
        transition: color var(--transition);
    }
    
    .footer-menu a:hover,
    .footer-menu a:focus {
        color: var(--accent-color);
        outline: none;
    }
    
    .social-list {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 16px;
    }
    
    .social-list a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        transition: background var(--transition);
    }
    
    .social-list a:hover {
        background: var(--accent-color);
    }
    
    .newsletter-form {
        margin-top: 12px;
    }
    
    .form-group {
        display: flex;
        gap: 8px;
    }
    
    .form-input {
        flex: 1;
        padding: 12px 16px;
        border: none;
        border-radius: 4px;
        font-size: 14px;
    }
    
    .form-btn {
        padding: 12px 24px;
        background: var(--accent-color);
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: background var(--transition);
    }
    
    .form-btn:hover,
    .form-btn:focus {
        background: #7BCA00;
        outline: none;
    }
    
    .footer-copyright {
        padding: 24px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
    }
    
    .footer-copyright .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }
    
    .payment-methods {
        display: flex;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
    }
    
    .payment-badge {
        display: inline-block;
        padding: 4px 8px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        font-size: 12px;
    }
    
    @media (max-width: 768px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 24px;
        }
        
        .footer-copyright .container {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
